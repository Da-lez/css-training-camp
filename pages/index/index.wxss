/* 根据两张设计图得出的间距 */
/* 将module中的内边距改为text中的外边距(因此使用flex布局) */
.module {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* text-align: center;
    padding-top: 60rpx; */
}

.module text {
    margin-top: 60rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #AAAAAA;
}



.module1-image {
    padding-top: 104rpx;
    width: 600rpx;
    height: 600rpx;
}

.module2-img0 {
    width: 600rpx;
    height: 400rpx;
    margin: 60rpx;
    /* 这里的margin-top在设计图里是34px */

}

.module2-cutImg {
    display: flex;
    align-items: center;
    width: 100%;
}

.module2-cutImg1 {
    width: 100rpx;
    height: 100rpx;
    margin-inline: 76rpx 62rpx;

}

.module2-cutImg2 {
    width: 300rpx;
    height: 202rpx;

}

.module2-cutImg3 {
    width: 160rpx;
    height: 88rpx;
    margin-inline: 34rpx 18rpx;
}

.upload {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 188rpx;
    display: flex;
    justify-content: center;
    background-color: #3172EE;
}

.upload-image {
    position: relative;
    top: 40rpx;
    width: 54rpx;
    height: 42rpx;
    margin-right: 24rpx;
}

/* 测得upload-image和text之间间距为12px */
.upload-text {
    position: relative;
    top: 38rpx;
    width: 84rpx;
    height: 50rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 50rpx;
    letter-spacing: 4rpx;
}